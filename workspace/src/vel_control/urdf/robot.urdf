  <child link="link2"/>
  <origin xyz="0.7 0 0" rpy="0 0 -1.570796"/>
  <axis xyz="0 0 1"/>
  <limit lower="-3.14" upper="3.14" effort="100" velocity="2"/>
</joint>

<!-- ================= LINK3 ================= -->
<link name="link3">
  <visual>
    <geometry>
