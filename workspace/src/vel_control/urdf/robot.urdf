<?xml version="1.0"?>
<robot name="abb_simple">

<!-- ================= BASE ================= -->
<link name="base_link">
  <visual>
    <geometry>
      <box size="0.2 0.2 0.1"/>
    </geometry>
    <origin xyz="0 0 -0.05"/>
  </visual>
</link>

<!-- ================= LINK1 ================= -->
<link name="link1">
  <visual>
    <origin xyz="0.075 0 0" rpy="0 1.5708 0"/>
    <geometry>
      <cylinder length="0.15" radius="0.04"/>
    </geometry>
  </visual>
</link>

<joint name="joint1" type="revolute">
  <parent link="base_link"/>
  <child link="link1"/>
  <origin xyz="0.15 0 0.4865" rpy="-1.570796 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="-3.14" upper="3.14" effort="100" velocity="2"/>
</joint>

<!-- ================= LINK2 ================= -->
<link name="link2">
  <visual>
    <origin xyz="0.35 0 0" rpy="0 1.5708 0"/>
